<div id="guests">
    <h3>Guest List</h3>
    <ul>
    {{#each guests}}
        <li>{{name}}</li>
        <form>
            <button type="submit">Confirm Arrival</button>
        </form>
    {{/each}}
    </ul>
</div>
<div id="requests">
    <h3>Requests</h3>
    <ul>
        {{#each requests}}
            <li>{{message}} 
                <form action="/request/{{_id}}" method="POST">
                    <input type="radio" name="approved" value="yes">Yes
                    <input type="radio" name="approved" value="no">No
                    <button type="submit" name="approved">Okay</button>
                </form>
            </li>
        {{/each}}
    </ul>
</div>

<div id="units">
    <h3>Your Units</h3>
    <ul>
        {{#each units}}
        <li>{{name}} {{superUnit}}</li>
        <form action="/addguest/{{_id}}" method="POST">
            <input id="guestName" name="name" placeholder="Guest's Name">
            <button type="submit">Add Guest</button>
        </form>
        {{/each}}
    </ul>
</div>